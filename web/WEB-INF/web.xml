<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <display-name>Headphones</display-name>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>ProductsServlet</servlet-name>
        <servlet-class>servlets.ProductsServlet</servlet-class>
        <init-param>
            <param-name>lang</param-name>
            <param-value>en</param-value>
        </init-param>
        <init-param>
            <param-name>from</param-name>
            <param-value>0</param-value>
        </init-param>
        <init-param>
            <param-name>to</param-name>
            <param-value>1000000</param-value>
        </init-param>
        <init-param>
            <param-name>filter</param-name>
            <param-value>0</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductsServlet</servlet-name>
        <url-pattern>/products</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>OneProductServlet</servlet-name>
        <servlet-class>servlets.OneProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OneProductServlet</servlet-name>
        <url-pattern>/product</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ProcessOrder</servlet-name>
        <servlet-class>servlets.ProcessOrder</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProcessOrder</servlet-name>
        <url-pattern>/processorder</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CartPage</servlet-name>
        <servlet-class>servlets.CartPage</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CartPage</servlet-name>
        <url-pattern>/cart</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Purchases</servlet-name>
        <servlet-class>servlets.Purchases</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Purchases</servlet-name>
        <url-pattern>/purchases</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UserPage</servlet-name>
        <servlet-class>servlets.UserPage</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserPage</servlet-name>
        <url-pattern>/profile</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>OrderProducts</servlet-name>
        <servlet-class>servlets.OrderProducts</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OrderProducts</servlet-name>
        <url-pattern>/order</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>servlets.Logout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>servlets.Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>SetDefaultTab</servlet-name>
        <servlet-class>servlets.SetDefaultTab</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SetDefaultTab</servlet-name>
        <url-pattern>/setab</url-pattern>
    </servlet-mapping>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>WebLab_4</web-resource-name>
            <url-pattern>/profile</url-pattern>
            <url-pattern>/order</url-pattern>
            <url-pattern>/purchases</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>tomcat</role-name>
        </auth-constraint>
    </security-constraint>
    <security-role>
        <role-name>tomcat</role-name>
    </security-role>
    <login-config>
        <auth-method>FORM</auth-method>
        <form-login-config>
            <form-login-page>/login</form-login-page>
            <form-error-page>/webapp/jsplists/login_error.jsp</form-error-page>
        </form-login-config>
    </login-config>
</web-app>